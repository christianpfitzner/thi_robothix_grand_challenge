<launch>
    <!-- load box description -->
    <param name="box_description" command="$(find xacro)/xacro '$(find box_description)/urdf/box.urdf.xacro'" />

    <!-- static transform -->
    <!-- <node pkg="tf" type="static_transform_publisher" name="world_to_box" args="0.3 0.15 0 0 0 0 world box_base_link 100" /> -->
    <node pkg="tf" type="static_transform_publisher" name="world_to_link0" args="0.0 0.0 0.01045 0 0.014 -0.009 world panda_link0 100" />

    <node pkg = "tf" type="static_transform_publisher" name="link0_to_home" args= "0.414 0.203 0.416 1.000 -0.003 -0.001 -0.009 panda_link0 home 100"/>
    <node pkg="tf" type="static_transform_publisher" name="link0_to_dyi_pose" args="0.5 0.0 0.0 0 0 0 panda_link0 start_pose_dyi 100" />
    <node pkg = "tf" type="static_transform_publisher" name="link0_to_detection_pose" args= "0.369362 0.153634 0.655991 3.1416 3.1416 0 panda_link0 detection_pose 100"/>
    
    <node pkg = "tf" type="static_transform_publisher" name="panda_hand_to_hand_bottom" args= "0.0 0.0 0.11 0 0 0 panda_hand panda_hand_bottom 100"/>
    <node pkg = "tf" type="static_transform_publisher" name="panda_hand_to_hand_probe" args= "0.1061 0.0 0.157 0 1.0997 0 panda_hand panda_hand_probe 100"/>
    
    <!--DIY Task Probe Positions-->
    <node pkg ="tf" type="static_transform_publisher" name="world_to_probe_black" args= "0.497 0.549 0.074 -1.537 1.130 3.104 world probe_black 100"/>
    <node pkg = "tf" type="static_transform_publisher" name="world_to_probe_red" args= "0.500 0.641 0.074 -1.537 1.130 3.104 world probe_red 100"/>
    <node pkg = "tf" type="static_transform_publisher" name="link0_to_bat_det_pose" args= "0.541 -0.044 0.242 3.1416 3.1416 0 panda_link0 bat_det_pose 100"/>
    <node pkg = "tf" type="static_transform_publisher" name="link0_to_disp_r_pose" args= "0.279 0.584 0.176 3.1416 3.1416 0 panda_link0 disp_r_pose 100"/>
    <node pkg = "tf" type="static_transform_publisher" name="link0_to_container" args= "0.193 0.426 0.068 0.051 0.996 -3.091 panda_link0 container 100"/>
    

    <!--
    <node pkg="tf" type="static_transform_publisher" name="tcp_transform_inv" args="0 0 0 0 3.14159265 0 panda_hand_tcp panda_hand_tcp_inv 100" />
    -->

    

    <!-- robot state publisher -->
    <node pkg="robot_state_publisher" type="robot_state_publisher" name="box_state_publisher" output="screen">
        <param name="publish_frequency" value="50.0" />
        <remap from="robot_description" to="box_description" />
        <remap from="joint_states" to="box_joint_states" />
    </node>

</launch>