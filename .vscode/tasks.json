{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "catkin build",
            "type": "shell",
            "command": "cd ${workspaceFolder} && catkin build",
            "icon": {"color": "terminal.ansiRed","id": "wrench"},
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            }
        },
        {
            "label": "roslaunch sim.launch",
            "type": "shell",
            "command": "cd ${workspaceFolder} && cd ../.. && source devel/setup.bash && roslaunch ${workspaceFolder}/thi_robothix_grand_challenge/launch/sim.launch task_order:=${input:task_order}",
            "problemMatcher": ["$roslaunch"],
            "isBackground": true,
            "icon": {"color": "terminal.ansiWhite", "id": "rocket"},

        },
        {
            "label": "rosrun main node",
            "type": "shell",
            "command": "cd ${workspaceFolder} && cd ../.. && source devel/setup.bash && rosrun thi_robothix_grand_challenge_2023 thi_robothix_grand_challenge_node",
            "dependsOn": ["catkin build","roslaunch sim.launch"],
            "dependsOrder": "sequence",
            "problemMatcher": [],
            "icon": {"color": "terminal.ansiGreen", "id": "run"},
        }   
    ],
    "inputs": [
        {
            "id": "task_order",
            "default": "ABCDE",
            "type": "promptString",
            "description": "Enter the task order"
        }
    ]
}